; Ruby <%= version %> Configuration File.

[Setup]
AppId={<%= guid %>
DefaultDirName={sd}\Ruby<%= version_dir %><%= short_platform %>
ArchitecturesAllowed=<%= limit_platforms %>

; Include documentation unless requested otherwise
#ifndef NoDocs
[Files]
Source: ..\..\sandbox\doc\ruby<%= major_minor.sub('.', '') %>\*.chm; DestDir: {app}\doc
Source: ..\..\sandbox\book\bookofruby.pdf; DestDir: {app}\doc

[Icons]
Name: {group}\{cm:DocumentationTitle}\{cm:APIReferenceTitle,<%= version %>}; Filename: {app}\doc\ruby<%= major_minor.sub('.', '') %>.chm; Flags: createonlyiffileexists
Name: {group}\{cm:DocumentationTitle}\{cm:TheBookofRubyTitle}; Filename: {app}\doc\bookofruby.pdf; Flags: createonlyiffileexists
#endif
