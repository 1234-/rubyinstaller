<?xml version="1.0" encoding="utf-8"?>

<?include config.wxi ?>

<Wix xmlns="http://schemas.microsoft.com/wix/2003/01/wi">
  <Product Name="$(var.ProductName)" Id="$(var.ProductCode)" Version="$(var.ProductVersion)" Language="1033" Manufacturer="RubyInstaller Project">
    <Package Id="????????-????-????-????-????????????" Description="$(var.ProductName)" Comments="Copyright (c) 2008 RubyInstaller Project" Keywords="Installer Ruby" InstallPrivileges="elevated" Compressed="yes" InstallerVersion="200" />
    <UI />
    <UIRef Id="WixUI_FeatureTree" />
    <UIRef Id="WixUI_ErrorProgressText" />
    <Media Id="1" Cabinet="rubyinstaller.cab" EmbedCab="yes" CompressionLevel="high" />
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="WindowsVolume" Name="BootDrv">
        <Directory Id="INSTALLDIR" Name="$(var.InstallId)" />
      </Directory>
    </Directory>
    <Icon Id="RubyInstaller" SourceFile="..\icons\ruby.ico" />
    <Feature Id="Minimal" Level="1" Title="One Click Installer runtime" Description="The basic Ruby One Click Installer" ConfigurableDirectory="INSTALLDIR" >
      <FeatureRef Id="Ruby" />
      <FeatureRef Id="RubyGems" />
    </Feature>
    <Feature Id="Ruby" Level="1" Title="Ruby" Description="The Ruby interpreter and standard library">
      <ComponentGroupRef Id="group_RUBY_BIN" />
      <ComponentGroupRef Id="group_RUBY_LIB" />
      <ComponentGroupRef Id="group_RUBY_SHARE" />
    </Feature>
    <Feature Id="RubyGems" Level="1" Title="RubyGems" Description="The RubyGems package management system">
      <ComponentGroupRef Id="group_RUBYGEMS_BIN" />
      <ComponentGroupRef Id="group_RUBYGEMS_LIB" />
    </Feature>
  </Product>
</Wix>
